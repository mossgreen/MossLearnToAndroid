<resources>

    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    
    <!-- We need to define the size for each as both a dimension and an integer value,
    	 so that we can use these measurements in both the XML layout and drawable resources and the Java code. -->
	<!-- Brush sizes -->
	<dimen name="small_brush">5dp</dimen>
	<integer name="small_size">5</integer>
	<dimen name="medium_brush">13dp</dimen>
	<integer name="medium_size">13</integer>
	<dimen name="large_brush">20dp</dimen>
	<integer name="large_size">20</integer>

</resources>
