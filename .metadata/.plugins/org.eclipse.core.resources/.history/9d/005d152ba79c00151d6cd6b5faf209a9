package com.jcasey;

public class BBall {
	
	private int radius;
	private float x;
	private float y;
	
	public int getRadius() {
		return radius;
	}

	public void setRadius(int radius) {
		this.radius = radius;
	}

	public float getX() {
		return x;
	}

	public void setX(float x) {
		this.x = x;
	}

	public float getY() {
		return y;
	}



	public void setY(float y) {
		this.y = y;
	}



	public BBall() {
		// TODO Auto-generated constructor stub
	}
	
	public BBall(float x, float y, int radius){
		this.x = x;
		this.y = y;
		this.radius = radius;
				
	}
	

}
